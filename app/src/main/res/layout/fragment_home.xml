<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/selectcoursetoobar"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/white"
            app:contentInsetStart="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:text="选课"
                    android:textSize="15sp"
                    android:gravity="center"
                    ></TextView>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:layout_margin="5dp"
                    android:background="@drawable/shape_bbg"
                    android:layout_marginVertical="0dp"
                    android:layout_height="match_parent">
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:imeOptions="actionSearch"
                        android:layout_marginHorizontal="20dp"
                        android:singleLine="true"
                        android:background="@drawable/ic"
                        android:hint="| 搜索"
                        android:textSize="10sp"
                        >
                    </com.google.android.material.textfield.TextInputEditText>
                </LinearLayout>
                <Button
                    android:id="@+id/selectcoursefindbtn"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:drawableTop="@drawable/sousu"
                    android:padding="10dp"
                    android:background="@color/TRANSPARENT">
                </Button>
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:id="@+id/homescrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:fillViewport="true"
            android:overScrollMode="never">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:orientation="vertical">

                <androidx.viewpager.widget.ViewPager
                    android:id="@+id/lunbo"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:padding="10dp">
                </androidx.viewpager.widget.ViewPager>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_bg">
                    <Button
                        android:id="@+id/hometype1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:paddingTop="10dp"
                        android:drawableTop="@drawable/kouqianghuli"
                        android:background="@drawable/ic"
                        android:text="康复护理"
                        android:textColor="@color/black"
                        android:textSize="11sp"/>
                    <Button
                        android:id="@+id/hometype2"
                        android:layout_width="0dp"
                        android:paddingTop="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/falvsusong"
                        android:background="@drawable/ic"
                        android:text="法律法规"
                        android:textColor="@color/black"
                        android:textSize="11sp"/>
                    <Button
                        android:id="@+id/hometype3"
                        android:layout_width="0dp"
                        android:paddingTop="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/shenghuo"
                        android:background="@drawable/ic"
                        android:text="生活常识"
                        android:textColor="@color/black"
                        android:textSize="11sp"/>
                    <Button
                        android:id="@+id/hometype4"
                        android:layout_width="0dp"
                        android:paddingTop="10dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/gengduo"
                        android:background="@drawable/ic"
                        android:text="更多"
                        android:textColor="@color/black"
                        android:textSize="11sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/shape_bg"
                    android:padding="5dp"
                    android:layout_marginHorizontal="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:orientation="horizontal"
                        >
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="10"
                            android:layout_height="match_parent"
                            android:textSize="15sp"
                            android:text="推荐课程"
                            android:textColor="@color/black"
                            android:layout_margin="10dp"
                            android:gravity="center_vertical"
                            android:background="@color/white"></TextView>
                        <Button
                            android:id="@+id/homemore"
                            android:layout_width="0dp"
                            android:layout_weight="7"
                            android:gravity="center_vertical|end"
                            android:layout_height="match_parent"
                            android:text="查看更多"
                            android:textColor="@color/black"
                            android:layout_margin="5dp"
                            android:background="@color/TRANSPARENT"
                            android:drawableRight="@drawable/more"></Button>

                    </LinearLayout>

                    <com.org.moocapp.view.MyGridView
                        android:id="@+id/selectcoursegridview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:numColumns="2"
                        android:horizontalSpacing="5dp"
                        android:verticalSpacing="5dp"
                        >
                    </com.org.moocapp.view.MyGridView>
                </LinearLayout>

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</FrameLayout>