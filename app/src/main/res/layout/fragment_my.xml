                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:padding="5dp">

                            <ImageView
                                android:id="@+id/iv_channel"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@mipmap/my_mall" />

                            <TextView
                                android:id="@+id/tv_channel"
