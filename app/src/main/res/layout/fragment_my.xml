                            android:textColor="#404040"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_left_arrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />
                    <!--收藏-->
                    <RelativeLayout
                        android:id="@+id/rl_collect2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/img_collect2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_set" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_collect2"
                            android:text="设置"
                            android:textColor="#404040"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_left_arrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />
                    <!--退出登录-->
                    <RelativeLayout
                        android:id="@+id/rl_logout"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:paddingLeft="30dp"
                        android:paddingRight="10dp">

                        <ImageView
                            android:id="@+id/img_logout"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/my_logout" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_toRightOf="@+id/img_logout"
                            android:text="退出登录"
                            android:textColor="#404040"
                            android:textSize="16sp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:src="@mipmap/icon_left_arrow" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#EEEEEE" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
