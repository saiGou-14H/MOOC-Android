<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activaty.SignActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signtoobar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white"
        app:contentInsetStart="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/sign_return"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:background="@drawable/ic"
                android:drawableLeft="@drawable/fanhui"
                >
            </Button>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="8"
                android:layout_height="match_parent"
                android:text="签到"
                android:textSize="15sp"
                android:gravity="center"></TextView>
            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:padding="8dp"
                android:layout_height="match_parent"
                android:background="@color/TRANSPARENT">
            </Button>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="103dp"
                android:gravity="center_vertical"
                android:background="@drawable/shape_bg"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/toobar"
                android:orientation="horizontal"
                android:paddingLeft="19dp">
                <ImageView
                    android:id="@+id/sign_img_header"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/header"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/singhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="已连续签到2天"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/signmoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="明日签到可得3积分"
                        android:textColor="@color/black"
                        android:textSize="12sp" />
                </LinearLayout>
                <Button
                    android:id="@+id/sign_btn"
                    android:layout_marginLeft="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="签到"
                    android:textSize="20sp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/shape_bg"
                    android:backgroundTint="#009688"></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/shape_bg"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:padding="10dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="1天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="1"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="2天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="2"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="3天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn3"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="3"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="4天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="4"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="5天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="5"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="6天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn6"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="6"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:padding="8dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:gravity="center"
                            android:text="7天"
                            android:layout_marginBottom="10dp"/>
                        <Button
                            android:id="@+id/sign_btn7"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:drawableTop="@drawable/jinbi"
                            android:backgroundTint="@color/no_sign"
                            android:padding="2dp"
                            android:background="@drawable/shape_bg"
                            android:textSize="12sp"
                            android:textColor="@color/white"
                            android:text="7"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_bg"
                android:backgroundTint="@color/white"
                android:padding="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="签到规则"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.用户每日登录app进行签到，可获得积分奖励."
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2.每日签到可获得1积分，每连续一天，额外奖励1积分，签到每日的上限为6积分;如连续签到中断，则以1积分重新开始重计。"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3.如连续签到一个月，则下月签到额外奖励翻倍，以此类推。"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(例:用户甲10月连续签到一整月，则11月的签到积分为1积分，每连续一天，额外奖励2积分)"
                    android:textColor="@color/black"
                    android:textSize="15sp">
                </TextView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>